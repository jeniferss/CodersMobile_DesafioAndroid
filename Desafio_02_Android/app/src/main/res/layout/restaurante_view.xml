<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dim_10dp"
    android:layout_marginTop="@dimen/dim_10dp"
    android:layout_marginEnd="@dimen/dim_10dp"
    app:cardCornerRadius="@dimen/dim_20dp"
    tools:context=".ListaRestaurante">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgRestaurante"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dim_10dp"
            android:layout_height="@dimen/dim_240dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNomeRestaurante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_10dp"
                android:layout_marginEnd="@dimen/dim_10dp"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dim_30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_10dp"
                android:layout_marginEnd="@dimen/dim_10dp"
                android:maxLines="1"
                android:textSize="@dimen/dim_15sp" />

            <TextView
                android:id="@+id/tvHorarioFechamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_10dp"
                android:layout_marginEnd="@dimen/dim_10dp"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/dim_10dp"
                android:textSize="@dimen/dim_15sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>